@model IEnumerable<ServerModel>
@{
    ViewData["Title"] = "Server";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- CSS cho bảng -->
<style>
    .table {
        border: 2px solid #007bff; /* Màu viền bảng */
        border-collapse: collapse;
        width: 100%; /* Đảm bảo bảng rộng đầy đủ */
    }

        .table th,
        .table td {
            border: 1px solid #007bff; /* Màu viền của ô */
            padding: 8px;
            text-align: center;
            vertical-align: middle; /* Canh giữa theo chiều dọc */
        }

            /* Đặt chiều rộng đặc biệt cho các cột Tướng nổi bật và Trấn nổi bật */
            .table th:nth-child(6), /* Cột Tướng nổi bật */
            .table th:nth-child(7),
            .table td:nth-child(6), /* Cột Trấn nổi bật */
            .table td:nth-child(7) {
                width: 150px; /* Tăng độ rộng cho cột */
            }

        /* Tùy chỉnh hình ảnh */
        .table img {
            border-radius: 5px;
            width: 40px;
            height: 40px;
        }
</style>

<h4>Danh sách Server</h4>
<a class="btn btn-success btn-sm" asp-action="Create" asp-controller="Server">Thêm Server</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Tên</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Slug</th>
            <th scope="col">Trạng thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Slug</td>
                <td>
                    @if (@item.Status == 1)
                    {
                        <span style="color: green" class="text text-success">Hiển thị</span>
                    }
                    else
                    {
                        <span style="color: red" class="text text-danger">Ẩn</span>
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Server" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Server" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
